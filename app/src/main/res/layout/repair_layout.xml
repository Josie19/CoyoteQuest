<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Parent -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        android:background="@color/transparentcolor">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/transparentcolor">

            <!-- Row 1 Box 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/transparentcolor">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:background="@color/transparentcolor">
                    <Button
                        android:id="@+id/repair_button_one"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/icon_firehydrant"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/text_one"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity = "center"
                    android:layout_weight="3"
                    android:background="@color/transparentcolor"
                    android:scaleType="fitXY"
                    android:text= "Fire Hydrants"
                    android:textColor="@color/white" />
            </LinearLayout>

            <!-- Row 1 Box 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/transparentcolor">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:background="@color/transparentcolor">
                    <Button
                        android:id="@+id/repair_button_two"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/ic_baseline_miscellaneous_services_24"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/text_two"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity = "center"
                    android:layout_weight="3"
                    android:background="@color/transparentcolor"
                    android:scaleType="fitXY"
                    android:text= "Pipes/Valves"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <!-- Row 1 Box 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/transparentcolor">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:background="@color/transparentcolor">
                    <Button
                        android:id="@+id/repair_button_three"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:padding="20dp"
                        android:scaleType="fitCenter"
                        android:background="@drawable/ic_electrical_services"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/text_three"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity = "center"
                    android:layout_weight="3"
                    android:background="@color/transparentcolor"
                    android:scaleType="fitXY"
                    android:text= "Electrical Lines"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Row 2  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/transparentcolor">


        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/transparentcolor">


        </LinearLayout>

        <!-- Row 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/transparentcolor">
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>